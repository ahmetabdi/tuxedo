<div id="ui-view" style="opacity: 1;">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-header">
            <a href="<%= new_item_path %>" class="btn btn-success btn-sm">New</a>
          </div>
          <div class="card-body">
            <% if flash[:notice] %>
              <div class="alert alert-warning"><%= flash[:notice] %></div>
            <% end %>

            <% @categories.each do |category| %>
              <h2><%= category.name %></h2>
              <table class="table table-bordered table-striped table-sm">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Default price</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <% category.items.each do |item| %>
                <tbody>
                  <tr>
                    <td><%= item.name %></td>
                    <td><%= humanized_money_with_symbol(item.default_price) %></td>
                    <td>
                      <a href="<%= edit_item_path(item) %>" class="btn btn-primary btn-sm">Edit</a>
                      <a href="<%= item_path(item) %>" data-method="delete" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                  </tr>
                </tbody>
                <% end %>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
